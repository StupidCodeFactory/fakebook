!!!
%html
  %head
    %meta{charset: 'utf-8'}
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{name: 'viewport', content: "width=device-width, initial-scale=1"}/
    %title Fakebook
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
  %body
    .page
      %header.header
        .is-navbar-container
          .is-brand.is-center
            = link_to 'Fakebook Payment', root_path, class: 'is-logo'
      %main.main
        - if alert
          .alert= alert
        - if notice
          .notice= notice
        .is-row
          .is-col
          .is-col
            = yield
          .is-col
      %footer.footer
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
